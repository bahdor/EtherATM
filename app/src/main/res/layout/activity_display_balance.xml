<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.oliver352.etheratm.activities.DisplayBalanceActivity">

    <LinearLayout
        android:id="@+id/balance_layout"
        android:layout_width="368dp"
        android:layout_height="495dp"

        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/balance_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:text="Balance(Ether)"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/balance_text"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="0.14"
            android:text="TextView"/>

        <Button
            android:id="@+id/redeem_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Redeem"/>

        <RelativeLayout
            android:id="@+id/chech_box_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/atm_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="ETH ATM"/>
        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
